<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Dialog title="Filter Banks" contentWidth="400px" contentHeight="600px" design="Bold">
        <content>
            <VBox class="sapUiSmallMarginBegin">
                <Label class="sapUiSmallMarginTop sapUiSmallTinyBottom" text="{i18n>filters_dialog_label_banks}" design="Bold" />
                <VBox items="{ATMFilters>/banks/}">
                    <CheckBox class="sapUiTinyMarginBegin atm-filters-bank-checkbox" text="{ATMFilters>name}" selected="{ATMFilters>selected}" select="handleBankFilterChange" />
                </VBox>
            </VBox>
        </content>
        <buttons>
            <Button text="{i18n>filters_dialog_button_go}" press="applyBankFilters" type="Emphasized" />
            <Button text="{i18n>filters_dialog_button_clear}" press="clearBankFilters"  />
            <Button text="{i18n>filters_dialog_button_close}" press="closeBankFilters" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>